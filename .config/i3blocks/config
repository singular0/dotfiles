[cpu]
command=mpstat 1 1 | awk '/Average:/ {printf("%s\n", $(NF-9))}' | awk '{ printf(" ï’¼ %6s% \n"), $1 }'
interval=repeat
color=#00B4EB

[ram]
command=free -h | awk '/Mem:/ { printf(" î¿…  %5s/%s \n", $3, $2) }'
interval=1
color=#FEC925

[disk]
command=df -h / | awk '/\//{ printf(" ðŸ’¾ %4s/%s \n", $4, $2) }'
interval=60
color=#C9E3DB

[eth]
command=ip addr show enp0s1 | awk '/inet /{ printf(" ó°–© %s\n", $2) }'
interval=60
color=#00B171

[time]
command=date +" %a, %d %b %H:%M"
interval=5
color=#C9E3DB
